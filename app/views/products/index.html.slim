.pt-2.pb-3
  = render partial: 'modal'
  .container
    = render partial: 'shared/product-title'
    .row.mx-3
      - @products_page.each do |product|
        .form
          .col-xs-2.float-left.mx-2.mb-2
            .card
              .card-top
                = link_to product
                  .card-title
                    = product.product_name
              .img-body-pro
                = link_to product
                  .card-img-top
                    = image_tag product.image if product.image.attached?
    = paginate @products_page
