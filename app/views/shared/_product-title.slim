.container-custom
  ul.cooking-product-switch
    li.switch-item
      = link_to t('cookings'), cookings_path, class: "is-current"
    li.switch-item
      = link_to t('products'), products_path
      .check-food.far.fa-check-circle
  h1.mx-auto.title.pt-4
    = t('view_product')
